{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "assist": {
    "actions": {
      "source": {
        "noDuplicateClasses": "on",
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [
                ":BUN:",
                ":NODE:",
                ":PACKAGE:",
                "!@pkg/**",
                "!@app/**",
                "!@tool/**"
              ],
              ":BLANK_LINE:",
              ["@pkg/**", "@app/**", "@tool/**"],
              ":BLANK_LINE:",
              ":ALIAS:",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        },
        "useSortedAttributes": "on",
        "useSortedInterfaceMembers": "on",
        "useSortedKeys": "on"
      }
    }
  },
  "files": { "includes": ["**", "!**/*.gen.ts"] },
  "formatter": {
    "expand": "never",
    "formatWithErrors": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": { "quoteStyle": "single", "trailingCommas": "es5" }
  },
  "linter": {
    "domains": { "project": "recommended", "turborepo": "all", "types": "all" },
    "rules": {
      "correctness": { "noUnusedImports": { "fix": "safe", "level": "warn" } }
    }
  },
  "overrides": [
    {
      "assist": { "actions": { "source": { "useSortedKeys": "off" } } },
      "includes": [
        ".config/**",
        ".vscode/**",
        ".github/**",
        "**/biome.json",
        "**/package.json",
        "**/*tsconfig.json"
      ]
    },
    { "formatter": { "expand": "always" }, "includes": ["**/package.json"] }
  ],
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  }
}
