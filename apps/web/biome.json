{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "extends": "//",
  "css": {
    "formatter": { "enabled": true },
    "parser": { "cssModules": true, "tailwindDirectives": true }
  },
  "linter": {
    "rules": {
      "a11y": { "useKeyWithClickEvents": "off", "useSemanticElements": "off" },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": {
            "attributes": ["className"],
            "functions": ["clsx", "cva", "tw", "cn"]
          }
        }
      },
      "suspicious": {
        "noConsole": {
          "level": "error",
          "options": { "allow": ["error", "info", "warn"] }
        },
        "noUnknownAtRules": {
          "level": "error",
          "options": { "ignore": ["tailwind"] }
        }
      }
    }
  }
}
