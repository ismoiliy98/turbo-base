{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "updateInternalDeps": true,
  "rangeStrategy": "bump",
  "automerge": true,
  "packageRules": [
    { "matchPackagePatterns": ["^@pkg/"], "enabled": false },
    { "matchPackagePatterns": ["^@app/"], "groupName": "internal apps" },
    { "matchPackagePatterns": ["^@tool/"], "groupName": "internal tools" }
  ],
  "npm": { "fileMatch": ["(^|/)package\\.json$", "(^|/)package\\.json\\.hbs$"] }
}
