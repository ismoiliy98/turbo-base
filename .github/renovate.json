{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "updateInternalDeps": true,
  "rangeStrategy": "bump",
  "automerge": true,
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": [
        "/^@pkg//"
      ]
    },
    {
      "groupName": "internal apps",
      "matchPackageNames": [
        "/^@app//"
      ]
    },
    {
      "groupName": "internal tools",
      "matchPackageNames": [
        "/^@tool//"
      ]
    }
  ],
  "npm": {
    "managerFilePatterns": [
      "/(^|/)package\\.json$/",
      "/(^|/)package\\.json\\.hbs$/"
    ]
  }
}
