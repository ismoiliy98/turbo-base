{
  "$schema": "https://unpkg.com/knip/schema.json",
  "ignoreWorkspaces": ["packages/shared"],
  "workspaces": {
    "{apps,packages}/*": {
      "entry": ["src/{index,main}.{ts,tsx}"],
      "project": ["**/*.{ts,tsx,json}"]
    },
    "apps/api": { "entry": ["src/main.ts"], "project": ["**/*.{ts,tsx,json}"] },
    "apps/web": { "entry": ["src/router.{ts,tsx}"] },
    "tools/*": { "project": ["**/*.{ts,tsx,json}"] }
  },
  "cspell": { "config": ".vscode/cspell.json" },
  "commitlint": { "config": ".config/commitlintrc.yaml" }
}
